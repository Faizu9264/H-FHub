                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option row">
                        <div class="col-lg-6">

                           
                        
                        </div>
                       
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <!-- Header Section End -->
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-sm-12">
                    <div class="card shadow-2-strong">
                        <div class=" p-5 ">
                            <div class="text-center">
                                <h3 class="mb-3">Edit Profile</h3>
                               
                            </div>
                            <form action="/profile/edit" method="post" onsubmit="return validateProfile()">
                                <div class="form-outline mb-3 row">
                                    <div class="col-md-6 col-12 mb-3">
                                        <label class="form-label" for="username">Username</label>
                                        <input type="text" id="username" class="form-control form-control-md rounded-0" value="<%= userData.fname %>"
                                            placeholder="Enter your new username" name="username" />
                                        <small id="fnameErr" class="error"></small>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label class="form-label" for="email">Email</label>
                                        <input type="text" id="email" class="form-control form-control-md rounded-0" value="<%= userData.lname %>"
                                            placeholder="Enter your  email" name="email" />
                                        <small id="lnameErr" class="error"></small>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-dark btn-md rounded-pill px-5 py-2 login-btn" type="submit">Update Profile</button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        function validateProfile() {
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const fnameErr = document.getElementById('fnameErr'); // Corrected variable name
            const lnameErr = document.getElementById('lnameErr'); // Corrected variable name
    
            // Reset previous error messages
            fnameErr.textContent = '';
            lnameErr.textContent = '';
    
            // Check username and email for validation
            if (username.trim() === '') {
                fnameErr.textContent = 'Username is required';
                return false; // Prevent form submission
            }
    
            if (/^\d+$/.test(username)) {
                fnameErr.textContent = 'No numbers allowed in username';
                return false; // Prevent form submission
            }
    
            if (email.trim() === '') {
                lnameErr.textContent = 'Email is required';
                return false; // Prevent form submission
            }
    
            if (!email.includes('@')) {
                lnameErr.textContent = 'Email must contain "@" symbol';
                return false; // Prevent form submission
            }
    
            // You can add more complex validation here, e.g., email format validation
    
            return true; // Allow form submission
        }
    </script>
    

