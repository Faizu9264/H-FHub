  <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    
                    <div class="col-lg-6 col-md-7" style="display: flex;
                    align-items: center;">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
