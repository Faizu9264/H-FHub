<!-- Add Address Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form action="/profile/addAddress/<%= returnPage %>" method="post" class="form-outline">
                <div class="row d-flex justify-content-center">
                    <div class="d-flex flex-column col-lg-8 col-md-6">
                        <h6 class="checkout__title">Enter Details</h6>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Name<span>*</span></p>
                                    <input type="text" id="name" class="form-control" placeholder="Enter name" name="name" />
                                    <small id="nameErr" class="error"></small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="email" id="email" class="form-control" placeholder="Email" name="email" />
                                    <small id="emailErr" class="error"></small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Mobile<span>*</span></p>
                                    <input type="tel" id="mobile" class="form-control" placeholder="Mobile No." name="mobile" />
                                    <small id="mobileErr" class="error"></small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Town/City<span>*</span></p>
                                    <input type="text" id="town" class="form-control" placeholder="Town" name="town" />
                                    <small id="townErr" class="error"></small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>State<span>*</span></p>
                                    <input type="text" id="state" class="form-control" placeholder="State" name="state" />
                                    <small id="stateErr" class="error"></small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Country<span>*</span></p>
                                    <input type="text" id="country" class="form-control" placeholder="Country" name="country"/>
                                    <small id="countryErr" class="error"></small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>ZIP/Post Code<span>*</span></p>
                                    <input type="number" id="zip" class="form-control" placeholder="Enter ZIP Code" name="zip" />
                                    <small id="zipErr" class="error"></small>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" id="address" name="address" placeholder="Street Address" class="checkout__input__add form-control" >
                            <small id="addressErr" class="error"></small>
                        </div>
                        <button onclick="return validateNewAddress()" type="submit" class="btn btn-dark rounded-pill text-center">ADD</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
