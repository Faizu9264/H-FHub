


<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <title>H&F Hub</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
    rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

   
</head>

<body class="p-3 my-3">

    <div class="col-12">
        <div class="grid invoice">
            <div class="grid-body">
                <div class="invoice-title">
                    <div class="row">
                        <div class="d-flex col-12">
                            <img src="/img/gg-logo.png" alt="" height="35">
                            <h2 class="mx-3">H&F Hub | Invoice</h2>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-12 mt-2">
                            <h4>
                                <span class="small">Order ID: <%=order._id %></span>
                            </h4>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6">
                        <address>
                            <strong>Billed To:</strong><br>
                            <% console.log(order)%>
                            <%=order.deliveryAddress.userName %><br>
                            <%=order.deliveryAddress.address %><br>
                            <%=order.deliveryAddress.town %>&nbsp;<%=order.deliveryAddress.zip %> <br>
                            <%=order.deliveryAddress.state %><br>
                            <span title="Phone">Ph:</abbr> <%=order.deliveryAddress.mobile %>
                        </address>
                    </div>
                    <div class="col-6 text-end">
                        <address>
                            <strong>Shipped To:</strong><br>
                            <%=order.deliveryAddress.userName %><br>
                            <%=order.deliveryAddress.address %><br>
                            <%=order.deliveryAddress.town %>&nbsp;<%=order.deliveryAddress.zip %><br>
                            <%=order.deliveryAddress.state %><br>
                            <span title="Phone">Ph:</abbr> <%=order.deliveryAddress.mobile %>
                        </address>
                    </div>
                </div>
                <div class="row d-flex justify-content-end">
                    <div class="col-6">
                        <address>
                            <strong>Payment Method:</strong><br>
                            <%= order.paymentMethod %><br><br>
                        </address>
                    </div>
                    <div class="col-6 text-end">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-4">
                        <h3>ORDER SUMMARY</h3>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr class="line">
                                        <td><strong>#</strong></td>
                                        <td class=""><strong>Products</strong></td>
                                        <td class="text-center"><strong>Qty</strong></td>
                                        <td class="text-end"><strong>Rate</strong></td>
                                        <td class="text-end"><strong>Subtotal</strong></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%order.products.forEach((prod, index)=>{ %>
                                        <tr>
                                            <td><%= index +1 %></td>
                                            <td>
                                                <%=prod.productName %>
                                            </td>
                                            <td class="text-center">
                                                <%=prod.quantity %>
                                            </td>
                                            <% 
                                            //let productPrice;
                                            //let totalSingle;
                                            %>
                                            <td class="text-end">₹ <%=prod.productPrice - prod.discountPrice %>
                                            </td>
                                            <td class="text-end">₹ <%= (prod.productPrice - prod.discountPrice)* prod.quantity %>
                                            </td>
                                        </tr>
                                        <% }) %>
    
                                            <tr>
                                                <td colspan="3"></td>
                                                <td class="text-end"><strong>Taxes</strong></td>
                                                <td class="text-end"><strong>N/A</strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="3"></td>
                                                <td class="text-end"><strong>Coupon Discount</strong></td>
                                                <td class="text-end">
                                                    <strong>
                                                        <%= discount ? discount : 'N/A' %>
                                                    </strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3">
                                                </td>
                                                <td class="text-end"><strong>Total</strong></td>
                                                <td class="text-end"><strong>₹ <%=order.totalPrice %></strong>
                                                </td>
                                            </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end identity">
                        <p>Authorized<br><strong>H&F Hub</strong></p>
                    </div>
                </div>
                <div class="print text-end">
                   <span>download</span> <a onclick="window.print()" class="btn btn-success"><i class="bi bi-printer-fill"></i></a>
                </div>
            </div>
        </div>
    </div>
    
 
    
 
    


<script>
    $(document).ready(() => {
        window.onload(print())
    });
    
    </script>
</body>

</html>