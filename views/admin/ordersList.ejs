           <div class="row">
             <div class="col-12">
               <div class="card my-4">
                 <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                   <div class="bg-gradient-info shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between">
                     <h6 class="text-white text-capitalize ps-3">Orders List</h6> 
                     <!-- <div> -->
                       <!-- <a class="btn bg-gradient-dark me-3" href="/admin/products/addProduct">Add Product</a> -->
                     <!-- </div>   -->
                   </div>
                 </div>
                 <div class="card-body px-0 pb-2">
                   <div class="table-responsive p-0">
       
                     <table class="table align-items-center mb-0" id="sortTable">
       
                       <thead>
                         <tr>
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                           <!-- <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">User</th> -->
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Address</th>
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Products</th>
                           <!-- <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th> -->
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Payment Method</th>
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                           <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">view product</th>

                         </tr>
                       </thead>
       
                       <tbody>
                        <% if (orders && orders.length > 0) { %>
                          <% orders.forEach(order => { %>
                            <tr>
                              
                                
                              <td>
                                <% if (order.createdAt) { %>
                                   
                                        <p class="text-muted">
                                            <span class="font-weight-bold text-dark">
                                                <%= order.createdAt.toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                                            </span>
                                        </p>
                                        <% } else { %>
                                            
                                            <p class="text-muted">N/A</p>
                                            
                                            <% } %>
                                        
                                
                             
                             
                              </td>
                                <!-- User Address -->
                                <td>
                                   <% if (order && order.deliveryAddress) { %>   
                                
                                  <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm"><%= order.deliveryAddress.userName %></h6>
                                    <p class="text-xs text-secondary mb-0"><%= order.deliveryAddress.mobile %></p>
                                    <p class="text-xs text-secondary mb-0"> <%= order.deliveryAddress.email %>
                                    </p>
                                    
                                  </div>
                                  
                                </div>
                                <% } else { %>
                                  <!-- Handle case where user address is not found -->
                                  <p>User address not found</p>
                                <% } %>
                              </td>
                           
                              
                             <!-- Products within the order -->
<td class="align-middle text-center">
    <div class="d-flex flex-wrap" style="justify-content: center;">
      <% order.products.forEach(product => { %>
        <div class="d-flex px-2 py-1" style="margin-right: 20px;">
          <div class="d-flex flex-column justify-content-center">
            <% if (product) { %>
              <h6 class="mb-0 text-sm"><%= product.productName %></h6>
            <% } else { %>
              <p>No product name available</p>
            <% } %>
            <p class="text-xs text-secondary mb-0">Quantity: <%= product.quantity %></p>
            <p class="text-xs text-secondary mb-0">â‚¹<%= product.totalPrice %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </td>
  
                              
                              <td class="align-middle text-center text-sm">
                                <span class="text-secondary text-xs font-weight-bold"><%= order.status %>
                                  

                                </span>
                            </td>
                            <td class="align-middle text-center text-sm">
                                <%= order.paymentMethod %>
                            </td>
                            
                            <td>
                                <% 
                                if(order.status == 'Order Confirmed' || order.status == 'Shipped'|| order.status == 'Out For Delivery' || order.status == 'Pending' ){
                                    %>
                                    <button style="border: none;" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                    class="popupBTN btn btn-info" data-id="<%= order._id  %>"><i class="bi bi-pencil-square"
                                    style="color: blue;"></i>
                                   edit </button>
                                    <%  
                                }
                                %>
                                
                                <% 
                                if(order.status == 'Order Confirmed' || order.status == 'Shipped' || order.status == 'Pending'){
                                    %>
                                    <!-- <td class="align-middle text-center"> -->
                                        <a href="#cancelOrderModal"  class="btn btn-danger confirmCancelBTN"  data-bs-toggle="modal" data-id="<%= order._id %>">Cancel</a>
                                    <!-- </td> -->
                                    <%  
                                }else if(order.status === 'Pending Return Approval'){
                                  %>
                                  <!-- <td class="align-middle text-center"> -->
                                      <a href="/admin/approveReturn/<%= order._id %>" class="btn btn-warning">Approve</a>
                                  <!-- </td> -->
                                  <%  
                                }
                                %>
                                
                            </td>
                            <td class="align-middle text-center">
                                <a href="/admin/AdminviewOrderDetails/<%= order._id %>" class="btn btn-dark">Details</a>
                              </td>
                            
                            
                        </tbody>
                                     
                        
    
                               
    
                            <!-- Modal Start -->
                            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Change Status</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="/admin/changeOrderStatus" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="orderId" id="orderId" value="">
                                                <label for="status">Select delivery status</label><br><br>
                                                <select name="status" class="form-control" id="status">
                                                    <option value="Shipped">Shipped</option>
                                                    <option value="Out For Delivery">Out For Delivery</option>
                                                    <option value="Delivered">Delivered</option>
                                                </select>
    
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Change Status</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal End  -->

    
    
                                                                                              <!-- Order Cancel Confirmation Modal Start  -->
                                                                                              <div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                                                                <div class="modal-dialog">
                                                                                                  <div class="modal-content">
                                                                                                      <div class="modal-header">
                                                                                                      <h1 class="modal-title fs-5" id="exampleModalLabel">Are You Sure?</h1>
                                                                                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                                                      </div>
                                                                                                      <div class="modal-body">
                                                                                                              <strong> Do you want to Cancel this Order ?</strong>
                                                                                                              <div class="modal-footer mt-2">
                                                                                                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                                                                  <a id="confirmCancelBTN" class="btn btn-primary">Confirm</a>
                                                                                                              </div>
                                                                                                      </div>
                                                                                                  </div>
                                                                                                </div>
                                                                                            </div> 
                                                                                            <!-- Order Cancel Confirmation Modal End  -->
                                  
                                </tr>
                                <% }); %>
                                <% } %>
    
                    </tbody>
 
                  </table>
                  <!-- Pagination  -->
        <div class="row">
        <div class="col-lg-12 d-flex  align-items-center">
        <div class="product__pagination  d-flex justify-content-end">
        <% 
        if(pageNum > 1){
        %>
        <a class="mx-1 btn" 
          href="?pageNum=<%= pageNum-1 %>&limit=<%= limit %>">Prev
        </a>
        <% 
        }
        for(let i=1; i<= pageCount; i++){
          %>
          <a class="mx-1 btn p-2 rounded-pill" 
          <% if(pageNum === i){ %> 
            style="color: black; background-color: lightblue;"
          <% } %>
            href="?pageNum=<%= i %>&limit=<%= limit %>"><%= i %>
          </a>
          <%  
        }
        if(pageNum < pageCount){
        %>
        <a class="mx-1 btn" 
          href="?pageNum=<%= pageNum+1 %>&limit=<%= limit %>">Next
        </a>
        <% 
        }
        %>
        </div>
        </div>
        </div>
                
                </div> 
              </div>
            </div>
          </div>
        </div>
