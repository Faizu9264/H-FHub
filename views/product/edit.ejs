<script>
    function validateForm() {
    let isValid = true;
    // Reset error messages
    document.querySelectorAll('.error').forEach((error) => {
        error.textContent = '';
    });
    // Image validation
    const fileInputs = document.querySelectorAll('.file-input');
    for (const [index, fileInput] of fileInputs.entries()) {
        const files = fileInput.files;
        const errorElement = document.querySelectorAll('.error')[index];
        if (files.length === 0) {
            errorElement.textContent = 'Please select all images.';
            isValid = false;
        } else {
            errorElement.textContent = ''; // Clear the error message
        }
        for (const file of files) {
            const fileSize = file.size;
            const allowedFileSize = 5 * 1024 * 1024; // 5 MB
            if (fileSize > allowedFileSize) {
                errorElement.textContent = 'File size exceeds the allowed limit (5 MB).';
                isValid = false;
            }
        }
    }
    // Offer fields validation
    const name = document.getElementById('name').value.trim();
    const price = document.getElementById('price').value.trim();
    const description = document.getElementById('description').value.trim();
    const category = document.getElementById('category').value;
    const discountPrice = document.getElementById('discountPrice').value.trim();
    const stock = document.getElementById('stock').value.trim();
    // const brand = document.getElementById('brand').value.trim();
    if (name === '') {
        document.getElementById('nameErr').textContent = 'Name is required';
        isValid = false;
    }
    if (price === '' || isNaN(price) || parseFloat(price) <= 0) {
        document.getElementById('priceErr').textContent = 'Price must be a positive number';
        isValid = false;
    }
    if (description === '') {
        document.getElementById('descriptionErr').textContent = 'Description is required';
        isValid = false;
    }
    if (category === '') {
        document.getElementById('categoryErr').textContent = 'Category is required';
        isValid = false;
    }
    if (discountPrice === '' || isNaN(discountPrice) || parseFloat(discountPrice) < 0) {
        document.getElementById('discountPriceErr').textContent = 'Discount Price must be a positive number';
        isValid = false;
    }
    if (stock === '' || isNaN(stock) || parseInt(stock) < 0) {
        document.getElementById('stockErr').textContent = 'Stock must be a non-negative integer';
        isValid = false;
    }
    const brand = document.getElementById('brand').value.trim();
    const brandErrorElement = document.getElementById('brandErr'); // Use getElementById
    if (brand === '') {
        brandErrorElement.textContent = 'Brand is required';
        isValid = false;
    } else {
        brandErrorElement.textContent = ''; // Clear the error message
    }
    // Return false if validation fails
    if (!isValid) {
        return false;
    }
    // Return true if validation passes
    return true;
}
</script>
